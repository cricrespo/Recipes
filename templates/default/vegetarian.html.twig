{% extends 'base.html.twig' %}

{% block title %}Recipes!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .card-title {color: black !important; font-size: 20px !important;}
    .card { width: 400px !important;}
</style>

 {{ include('nav.html.twig') }}

<div class="example-wrapper">
    <h1>Vegetarian Recipes</h1>
    <div class="row">
    {% for recipe in recipes %}
	  	<div class="card">
		    <div class="card-image waves-effect waves-block waves-light">
		      	{% if (recipe.thumbnail != "") %}
	          		<img src="{{recipe.thumbnail}}">
	          	{% else %}
	          		<img src="/images/recipes.jpeg">
	          	{% endif %}
		    </div>
		    <div class="card-content">
		      <span class="card-title activator grey-text text-darken-4">{{recipe.title}}<i class="material-icons right">more_vert</i></span>
		    </div>
		    <div class="card-reveal">
		      <span class="card-title grey-text text-darken-4">{{recipe.title}}<i class="material-icons right">close</i></span>
		      <p>{{recipe.ingredients}}</p>
		    </div>
		 </div>
    {% endfor %}
  </div>


</div>
{% endblock %}


